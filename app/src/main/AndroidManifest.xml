<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".TCApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_app_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_app_launcher_icon"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.BtlAndroidTinder">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="LoveMatch"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".ui.SingleChatScreen"
                android:exported="false"
                android:theme="@style/Theme.BtlAndroidTinder" />


    </application>

</manifest>